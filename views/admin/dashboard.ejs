<div class="admin_title d-flex justify-content-between">
    <h2>Yazılarım</h2>
    <a href="add_post" class="btn">Yeni Yazı ekle</a>
</div>
<ul class="admin_post ">
    <% data.forEach(post => { %>
        <li class="d-flex justify-content-between align-items-center">
            <a href="/post/<%= post._id %>"><%= post.title %> &nearr;</a>
            
            <div class="admin_post_controls d-flex justify-content-between">
                <a href="/edit_post/<%= post._id %>" class="btn text-dark">Düzenle</a>
                <form action="/post_delete/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Sil" class="btn text-dark">
                </form>
            </div>
        </li>
    <% }) %>
</ul>